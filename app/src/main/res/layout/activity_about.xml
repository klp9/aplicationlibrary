<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:title="ABOUT"
            android:titleTextColor="@android:color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat datang di Perpustakaan Digital!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kami menghadirkan pengalaman membaca yang modern dan praktis melalui aplikasi perpustakaan digital ini. Dengan fitur meminjam buku secara online, Anda dapat menikmati berbagai koleksi bacaan kapan saja dan di mana saja."
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Versi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• App Version: 9.0.0\n• Last Updated: 1 Januari 2025"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="@color/white" />

        <!-- Gambar Ilustrasi -->
        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/awan"
            android:contentDescription="Illustration of Books"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter" />

        <!-- Statistik -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistik Pengguna"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/statisticContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100K+"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengguna"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
            </LinearLayout>
        </LinearLayout>

        <!-- Timeline Update -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Pembaruan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Versi 9.0.0: Penambahan fitur pencarian buku yang lebih cepat.\n• Versi 8.5.0: Perbaikan bug minor dan peningkatan performa.\n• Versi 8.0.0: Penambahan koleksi baru sebanyak 10.000 buku."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
